{
  "pluginAlias": "CrestronHomePlatform",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Crestron Home Platform"
      },
      "crestronHost": {
        "title": "Crestron Processor IP Address",
        "type": "string",
        "required": true,
        "format": "hostname"
      },
      "token": {
        "title": "API Auth Token",
        "type": "string",
        "required": true
      },
      "enabledTypes": {
        "title": "Enabled devices",
        "type": "array",
        "uniqueItems": true,
        "items": {
          "title": "Type",
          "type": "string",
          "enum": [
            "Switch",
            "Dimmer",
            "Shade",
            "Scene"
          ]
        }
      },
      "loginInterval": {
        "title": "Login Interval (minutes). Default 4",
        "default": 4,
        "type": "integer",
        "minimum": 1,
        "maximum": 10,
        "required": false
      }
    }
  }
}